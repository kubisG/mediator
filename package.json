{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "hoists": "lerna bootstrap --hoist",
    "nohoists": "lerna bootstrap --scope ra-trader-fe --scope ra-web-test-fe",
    "init": "npm run clean && npm run hoists",
    "bts": "lerna bootstrap",
    "bootstrap": "npm run clean && lerna bootstrap",
    "reinit": "npm run hoists",
    "bundle": "lerna run --no-bail bundle",
    "ra-trader-be": "lerna run --scope ra-trader-be build:prod",
    "ra-trader-fe": "lerna run --scope ra-trader-fe build:all",
     "watch:bundle": "nodemon -e ts --config nodemon.json"
  },
  "devDependencies": {
    "lerna": "3.13.3",
    "nodemon": "1.19.0"
  }
}
