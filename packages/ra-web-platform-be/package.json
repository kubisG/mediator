{
    "name": "@ra/web-platform-be",
    "version": "1.1.0",
    "description": "ra-web-platform-be",
    "author": "",
    "license": "MIT",
    "scripts": {
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "tsc-watch --onSuccess \"node dist/main.js\"",
        "prestart:prod": "rm -rf dist && tsc",
        "start:prod": "node dist/main.js",
        "start:hmr": "node dist/server",
        "test": "jest --passWithNoTests",
        "test:cov": "jest --coverage --passWithNoTests",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "webpack": "webpack --config webpack.config.js",
        "lint": "tslint -c tslint.json --project ./tsconfig.json",
        "lint:fix": "tslint -c tslint.json --project ./tsconfig.json --fix"
    },
    "dependencies": {
        "@nestjs/common": "6.5.3",
        "@nestjs/core": "6.5.3",
        "@nestjs/platform-fastify": "6.5.3",
        "@nestjs/platform-socket.io": "6.5.3",
        "@ra/web-auth-be": "1.1.0",
        "@ra/web-core-be": "^1.1.0",
        "@ra/web-env-be": "^1.1.0",
        "fastify": "2.7.1",
        "fastify-formbody": "2.0.0",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.1",
        "typescript": "3.2.4"
    },
    "devDependencies": {
        "@nestjs/testing": "6.5.3",
        "@types/express": "4.0.39",
        "@types/jest": "^24.0.17",
        "@types/node": "9.6.49",
        "@types/supertest": "2.0.4",
        "jest": "^24.8.0",
        "tsc-watch": "2.2.1",
        "nodemon": "1.19.0",
        "prettier": "1.11.1",
        "rimraf": "2.6.3",
        "supertest": "3.0.0",
        "ts-jest": "21.2.4",
        "ts-loader": "4.1.0",
        "ts-node": "5.0.1",
        "tsconfig-paths": "3.1.1",
        "tslint": "^5.18.0"
    }
}
