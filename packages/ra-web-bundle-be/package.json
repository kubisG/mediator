{
    "name": "@ra/web-bundle-be",
    "version": "1.1.0",
    "description": "ra-web-monitor-be",
    "author": "",
    "license": "MIT",
    "scripts": {
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "npm run all && nodemon",
        "prestart:prod": "rm -rf dist && tsc",
        "start:prod": "node dist/main.js",
        "start:hmr": "node dist/server",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "webpack": "webpack --config webpack.config.js",
        "all": "ts-node --project ./module-config/tsconfig.json ./module-config/generate.ts -- -m all",
        "generate": "ts-node --project ./module-config/tsconfig.json ./module-config/generate.ts"
    },
    "dependencies": {
        "@nestjs/common": "5.4.0",
        "@nestjs/core": "5.4.0",
        "@nestjs/jwt": "0.2.0",
        "@nestjs/microservices": "5.4.0",
        "@nestjs/passport": "5.1.0",
        "@nestjs/swagger": "2.5.1",
        "@nestjs/terminus": "5.5.2",
        "@nestjs/websockets": "5.4.0",
        "@ra/web-auth-be": "1.1.0",
        "@ra/web-core-be": "^1.1.0",
        "@ra/web-ee-router": "^1.1.0",
        "@ra/web-env-be": "^1.1.0",
        "@ra/web-monitor-be": "^1.1.0",
        "@ra/web-queue": "^1.1.0",
        "cross-env": "5.2.0",
        "dotenv": "6.0.0",
        "fastify-formbody": "2.0.0",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.1",
        "typescript": "3.2.4"
    },
    "devDependencies": {
        "@nestjs/testing": "5.4.0",
        "@types/express": "4.0.39",
        "@types/node": "11.13.8",
        "@types/supertest": "2.0.4",
        "jest": "21.2.1",
        "nodemon": "1.19.0",
        "prettier": "1.11.1",
        "supertest": "3.0.0",
        "ts-jest": "21.2.4",
        "ts-loader": "4.1.0",
        "ts-node": "5.0.1",
        "tsconfig-paths": "3.1.1",
        "tslint": "5.9.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage"
    }
}
